<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners
                android:radius="5dip" />
            <gradient
                android:startColor="#000001"
                android:centerColor="#0b131e"
                android:centerY="0.5"
                android:endColor="#0d1522"
                android:angle="270"/>
        </shape>

    </item>

    <item android:id="@android:id/progress">

        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="#e0ab18"
                    android:centerColor="#f9845b"
                    android:centerY="0.5"
                    android:endColor="#e0ab18"
                    android:angle="270"/>
            </shape>
        </clip>
    </item>

</layer-list>